<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MyComplaints">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:srcCompat="@drawable/enquiry_bk" />

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="16dp"
                        android:paddingTop="-5dp"
                        android:text="Complaint Form"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="386dp"
                        android:layout_height="84dp"
                        android:layout_marginBottom="-45dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/txtInputName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <Spinner
                                android:id="@+id/Division"
                                android:layout_width="match_parent"
                                android:layout_height="69dp"
                                android:layout_marginBottom="16dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="376dp"
                        android:layout_height="85dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="-40dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/txtInputName2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <Spinner
                                android:id="@+id/SUB"
                                android:layout_width="match_parent"
                                android:layout_height="81dp"
                                android:layout_marginBottom="16dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="376dp"
                        android:layout_height="85dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="-40dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/txtInputName222"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <Spinner
                                android:id="@+id/CAT"
                                android:layout_width="match_parent"
                                android:layout_height="81dp"
                                android:layout_marginBottom="16dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtInputEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/name1"
                        android:layout_width="381dp"
                        android:layout_height="71dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="-40dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="57dp"
                            android:layout_marginTop="10dp"
                            android:backgroundTint="@android:color/holo_blue_dark"
                            android:hint="Name."
                            android:paddingStart="4dp"
                            android:paddingTop="0dp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textColorHint="@android:color/holo_blue_dark" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtInputReg"
                        android:layout_width="381dp"
                        android:layout_height="67dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="-40dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/number"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:backgroundTint="@android:color/holo_blue_dark"
                            android:hint="Account ID"
                            android:inputType="phone"
                            android:paddingStart="4dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="4dp"
                            android:paddingBottom="8dp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textColorHint="@android:color/holo_blue_dark" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/address1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="-30dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:backgroundTint="@android:color/holo_blue_dark"
                            android:hint="Door No/Address Line 1."
                            android:paddingStart="4dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="4dp"
                            android:paddingBottom="8dp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textColorHint="@android:color/holo_blue_dark" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/address22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="-30dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/address2"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:backgroundTint="@android:color/holo_blue_dark"
                            android:hint="Address Line 2."
                            android:paddingStart="4dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="4dp"
                            android:paddingBottom="8dp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textColorHint="@android:color/holo_blue_dark" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <ProgressBar
                        android:id="@+id/progressBar3"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="382dp"
                        android:layout_height="58dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtInputReg3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="-60dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/pole"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:backgroundTint="@android:color/holo_blue_dark"
                            android:hint="Pole No./Land Mark."
                            android:paddingStart="4dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="4dp"
                            android:paddingBottom="8dp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textColorHint="@android:color/holo_blue_dark" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtInputReg32"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="65dp"
                        android:layout_marginBottom="-60dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Phonenumber"
                            android:layout_width="match_parent"
                            android:layout_height="59dp"
                            android:backgroundTint="@android:color/holo_blue_dark"
                            android:hint="Phone Number."
                            android:inputType="number"
                            android:paddingStart="4dp"
                            android:text="+91"
                            android:paddingTop="8dp"
                            android:paddingEnd="4dp"
                            android:paddingBottom="8dp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textColorHint="@android:color/holo_blue_dark" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/su"
                        android:layout_width="386dp"
                        android:layout_height="134dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="-50dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/summary"
                            android:layout_width="match_parent"
                            android:layout_height="108dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp"
                            android:backgroundTint="@android:color/holo_blue_dark"
                            android:hint="Please provide more details."
                            android:inputType="textMultiLine"
                            android:paddingStart="4dp"
                            android:paddingTop="8dp"
                            android:lines="6"
                            android:paddingEnd="4dp"
                            android:paddingBottom="8dp"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textColorHint="@android:color/holo_blue_dark" />



                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtInputDate"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/dateEditText"
                            android:layout_width="match_parent"
                            android:layout_height="83dp"
                            android:backgroundTint="@android:color/holo_blue_dark"
                            android:clickable="true"
                            android:focusable="false"
                            android:hint="Select Date."
                            android:inputType="none"
                            android:onClick="showDatePickerDialog" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="104dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnSend"
                            android:layout_width="210dp"
                            android:layout_height="59dp"
                            android:layout_marginLeft="-10dp"
                            android:layout_marginTop="-10dp"
                            android:layout_marginRight="29dp"
                            android:backgroundTint="@android:color/holo_blue_dark"
                            android:fontFamily="@font/googlesans_bold"
                            android:text="Register Your Complaint"
                            android:textColor="@color/material_dynamic_tertiary10"
                            android:textColorHighlight="#F44336"
                            android:textColorHint="@color/black"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnUploadImage"
                            android:layout_width="wrap_content"
                            android:layout_height="59dp"
                            android:layout_marginRight="19dp"
                            android:backgroundTint="@android:color/holo_blue_dark"
                            android:text="Upload Image"
                            android:textColor="@color/material_dynamic_tertiary10"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>



        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
