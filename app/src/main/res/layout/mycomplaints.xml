<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="395dp"
            android:layout_height="54dp"
            android:layout_marginBottom="16dp"
            android:background="#0000FF"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Complaint List"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonClickToList"
            android:layout_width="109dp"
            android:layout_height="59dp"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="#00FF00"
            android:fontFamily="@font/poppins_semibold"
            android:text="Click to List" />

        <LinearLayout
            android:layout_width="389dp"
            android:layout_height="827dp"
            android:layout_below="@id/buttonClickToList"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="809dp">

                    <ImageView
                        android:id="@+id/comppic"
                        android:layout_width="match_parent"
                        android:layout_height="294dp"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/comp1"
                        android:layout_width="328dp"
                        android:layout_height="502dp"
                        android:layout_below="@id/comppic"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/buttonDelete"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="51dp"
                        android:layout_marginBottom="20dp"
                        app:srcCompat="@drawable/ic_delete" />

                    <ProgressBar
                        android:id="@+id/progressBar2"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/comppic"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="155dp"
                        android:layout_marginBottom="233dp" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
